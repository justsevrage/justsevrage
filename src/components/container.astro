---
interface Props {
	noMargin?: boolean;
	noSpaceBetween?: boolean;
	class?: string;
}

const { noMargin, noSpaceBetween, class: className } = Astro.props;
---

<div
	class={`
		flex flex-col p-8
		${noMargin ? "" : "max-w-screen-lg mx-auto"}
		${noSpaceBetween ? "" : "gap-4"}
		${className || ""}
	`}
>
	<slot/>
</div>
